@model IEnumerable<LP3_ProjetoFinal.Models.Employee>

@{
    ViewData["Title"] = "Funcionários";
}

<h1 class="display-4 mt-3 pt-4">@ViewData["Title"]</h1>
<hr>
<a class="btn btn-primary mb-4" asp-controller="Employee" asp-action="Create">Adicionar funcionário(a)</a>

@if(Model.Count() == 0)
{
    <p class="lead" style="font-size: 20px;">Nenhum(a) funcionário(a) cadastrado(a).</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Função</th>
                <th>Horário de entrada</th>
                <th>Horário de saída</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Lastname</td>
                    <td>@employee.Occupation</td>
                    <td>@employee.EntryTime</td>
                    <td>@employee.DepartureTime</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id">Atualizar</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Remover</a>
                        @* <a class="btn btn-primary btn-sm" href="#">Ver</a>
                         *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}