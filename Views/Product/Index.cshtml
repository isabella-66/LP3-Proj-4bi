@model IEnumerable<LP3_ProjetoFinal.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhuma produto cadastrado</p>
}
else
{
    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th>Quantidade</th>
                <th>ID da loja</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.Quantity</td>
                    <td>@product.StoreId</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Product/Show/@product.Id">Detalhes</a>
                     <a class="btn btn-warning btn-sm" asp-controller="Product" asp-action="Update"
                    asp-route-id="@product.Id">Atualizar</a>
                    <a class="btn btn-danger btn-sm" href="/Product/Delete/
                    @product.Id">Remover</a> 
                </td>
                </tr>
            }
        </tbody>
    </table>
}
