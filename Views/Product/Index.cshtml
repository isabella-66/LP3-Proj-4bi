@model IEnumerable<LP3_ProjetoFinal.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhuma produto cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th>Quantidade</th>
                <th>ID da loja</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.Quantity</td>
                    <td>@product.StoreId</td>
                <!--Ações-->
                </tr>
            }
        </tbody>
    </table>
}
