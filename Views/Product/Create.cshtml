@model LP3_ProjetoFinal.Models.Product;

@{
    ViewData["Title"] = $"Criar produto";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Product" asp-action="Create" method="post">

    <label for="Id">Id: </label> <br>
    <input type="number" name="Id"> <br>
    <span asp-validation-for="Id" class="text-danger"></span> <br>

    <label for="Name">Nome: </label> <br>
    <input type="text" name="Name"> <br>
    <span asp-validation-for="Name" class="text-danger"></span> <br>

    <label for="Price">Preço: </label> <br>
    <input type="number" name="Price"> <br>
    <span asp-validation-for="Price" class="text-danger"></span> <br>

    <label for="Description">Descrição: </label> <br>
    <input type="text" name="Description"> <br>
    <span asp-validation-for="Price" class="text-danger"></span> <br>

    <label for="Quantity">Quantidade: </label> <br>
    <input type="number" name="Quantity"> <br>
    <span asp-validation-for="Quantity" class="text-danger"></span> <br>

    <input type="hidden" name="StoreId" value="@ViewBag.lojaId">

    <button class="btn btn-success mt-2" type="submit">Salvar</button>
</form>