@model IEnumerable<LP3_ProjetoFinal.Models.CleaningTime>

@{
    ViewData["Title"] = "Horários de limpeza";
}
<h1>@ViewData["Title"]</h1>
<hr>
<a class="btn btn-primary btn-sm" href="/CleaningTime/Create">Novo Horário</a>

@if(Model.Count() == 0)
{
    <p>Nenhum horário cadastrado</p>
}
else
{
    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Horário de início</th>
                <th>Horário de término</th>
                <th>Funcionário</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var hour in Model)
            {
                <tr>
                    <td>@hour.Id</td>
                    <td>@hour.StartTime</td>
                    <td>@hour.EndTime</td> 
                    <td>@hour.Employee</td>
                    <td>
                       <a class="btn btn-primary btn-sm" asp-controller="CleaningTime" asp-action="Show" asp-route-id="@hour.Id">Ver</a>
                       <a class="btn btn-primary btn-sm" asp-controller="CleaningTime" asp-action="Update" asp-route-id="@hour.Id">Atualizar</a>
                       <a class="btn btn-primary btn-sm" asp-controller="CleaningTime" asp-action="Delete" asp-route-id="@hour.Id">Remover</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
