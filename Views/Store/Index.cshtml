@model IEnumerable<LP3_ProjetoFinal.Models.Store>

@{
    ViewData["Title"] = "Lojas";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhuma loja cadastrada</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var store in Model)
            {
                <tr>
                    <td>@store.Id</td>
                    <td>@store.Name</td>
                    <td>@store.Description</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Store/Show/@store.Id">Ver</a>
                </td>
                </tr>
            }
        </tbody>
    </table>
}
