@model LP3_ProjetoFinal.Models.MovieTheater;

@{
    ViewData["Title"] = $"Criar Nova Sala";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="MovieTheater" asp-action="Create" method="post">
    <p>
        <label asp-for="Id">Id: </label>
        <input type="number" asp-for="Id">
        <span asp-validation-for="Id" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Number">Número: </label>
        <input type="number"  asp-for="Number">
        <span asp-validation-for="Number" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="NumberSeats">Número de assentos: </label>
        <input type="number" asp-for="NumberSeats">
        <span asp-validation-for="NumberSeats" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="Hall">Corredor: </label>
        <input type="text" asp-for="Hall">
        <span asp-validation-for="Hall" class="text-danger"></span>
    </p>

    <button type="submit">Salvar</button>
</form>