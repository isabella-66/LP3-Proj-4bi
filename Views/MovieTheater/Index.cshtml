@model IEnumerable<LP3_ProjetoFinal.Models.MovieTheater>

@{
    ViewData["Title"] = "Salas de cinema";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhuma sala cadastrada</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número</th>
                <th>Número Assentos</th>
                <th>Corredor</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var theaters in Model)
            {
                <tr>
                    <td>@theaters.Id</td>
                    <td>@theaters.Number</td>
                    <td>@theaters.NumberSeats</td>
                    <td>@theaters.Hall</td>
                </tr>
            }
        </tbody>
    </table>
}
